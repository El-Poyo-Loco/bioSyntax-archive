# VCF language definition file for less pipe
# bioSyntax v0.1
# Depends on vcf.style + bioSyntax-vcf.outlang

# Variables ----------------------------------
vardef NUCLEOTIDE = '[ATCGNXatcgnxRYSWKMBVDH]'
vardef PHRED = '[!-K]' #PHRED 1.8

vardef NUMERICTAG = '(Number=|Type=|Date=|Version=)'
vardef QUOTETAG = '(Description=)'
vardef STRINGTAG = '(\w+=)' # all others

# Header Area -------------------------------
state comment start '^#[#]*' begin
  endline = '$' exit
 
  # fileformat
  state faheader = 'fileformat=' begin
   faheader = '\S*' exit
  end

  state null = 'fileDate=' begin
    numeric = '\S*' exit
  end

  state null = 'source=' begin
    software = '\S*' exit
  end

  # header line
  state faheader = 'CHROM' begin
    drop = '(?=$)' exit
    faheader = '[\S\t]+'
  end

  # FILTER
  state keywordi4 = 'FILTER=' begin
    drop = '(?=$)' exit
    quoteString delim '"' '"'
    string = '(?<==)\S+?(?=[,>])'
    string = '(?<=,)\S+?(?=[,>])'
    keywordi4 = '[<>]'
    keyword4 = '[A-Za-z0-9]+(?==)'
  end

  # FORMAT
  state keywordi2 = 'FORMAT=<' begin
    drop = '(?=$)' exit
    keywordi2 = '>'

    state keyword2 = '(Number=|Type=)' begin
      numeric = '\w+'
      drop = ',' exit
      drop = '(?=>)' exit
    end

    state keyword2 = '\w+=' begin
      string = '\w+'
      quoteString delim '"' '"'
      drop = ',' exit
      drop = '(?=>)' exit
    end
  end

  # INFO
  state keywordi3 = 'INFO=<' begin
    drop = '(?=$)' exit
    keywordi2 = '>'

    state keyword3 = '(Number=|Type=)' begin
      numeric = '\w+'
      drop = ',' exit
      drop = '(?=>)' exit
    end

    state keyword3 = '\w+=' begin
      string = '\w+'
      quoteString delim '"' '"'
      drop = ',' exit
      drop = '(?=>)' exit
    end
  end

  # ALT SAMPLE PEDIGREE
  state keywordi = '(ALT|SAMPLE|PEDIGREE)=<' begin
    drop = '(?=$)' exit
    keywordi = '>'

    state keyword = '(Number=|Type=)' begin
      numeric = '\w+'
      drop = ',' exit
      drop = '(?=>)' exit
    end

    state keyword = '\w+=' begin
      string = '\w+'
      quoteString delim '"' '"'
      drop = ',' exit
      drop = '(?=>)' exit
    end
  end

  # contig
  state keywordi5 = 'contig=<' begin
    drop = '(?=$)' exit
    keywordi3 = '>' exit

    state keyword5 = '(ID=)' begin
      chr = '\w+'
      drop = ',' exit
      drop = '(?=>)' exit
    end

    state url = '(URL=)' begin
      chr = '\w+'
      drop = ',' exit
      drop = '(?=>)' exit
    end

    state keyword5 = '\w+=' begin
      chrStart = '\w+'
      drop = ',' exit
      drop = '(?=>)' exit
    end
  end

  # reference
  state null = '(reference=|assembly=)' begin
    drop = '(?=$)' exit
    keyword = '\S+'
  end


  # Other
  state keywordi3 = '[\w\\.]+=<' begin
    drop = '(?=$)' exit
    keywordi2 = '>'

    # Numeric Descriptors
    state keyword3 = '(Number=|Type=|Date=|Version=)' begin
      numeric = '\w+'
      drop = ',' exit
      drop = '(?=>)' exit
    end

    # String Descriptors
    state keyword3 = '\w+=' begin
      string = '\w+'
      quoteString delim '"' '"'
      drop = ',' exit
      drop = '(?=>)' exit
    end
  end
end

# Data -------------------------------------

state data = '^' begin
  drop = '$' exit

  # Column 1: CHROM
  chr = '^\S+'

  # Column 2: POS
  state push2 = '\t' begin
    drop = '(?=$)' exit
    chrStart = '\d+'

    # Column 3: ID
    state push3 = '\t' begin
      drop = '(?=$)' exit
      comment = "."
      string = 'rs[0-9]+'

      # Column 4,5: REF
      # weird... no tab between 4 and 5 in data
      state push45 = '\t' begin
        drop = '(?=$)' exit
	ntA = '[Aa]'
	ntT = '[Tt]'
	ntG = '[Gg]'
	ntC = '[Cc]'
	ntN = '[Nn]'

	# Column 6: QUAL
	state push6 = '\t' begin
	  drop = '(?=$)' exit
	  #Quality below 10
	  comment = ".(?=\t)"
	  string = '[0-9](?=\t)'

	  #Quality above 10
	  numeric = '\d+'

	  # Column 7: FILTER
	  state push7 = '\t' begin
	    drop = '(?=$)' exit
	    bon = "PASS"
	    mal = "FAIL"
	    comment = "."

	    # Column 8: INFO
	    state push8 = '\t' begin
	      drop = '(?=$)' exit
	      keyword3 = '\w+='
	      numeric = '[\d\\.\\-]+(?=(;|\t))'

	      # Column 9: FORMAT
	      state push9 = '\t' begin
	        drop = '(?=$)' exit
		keyword2 = '[A-Za-z]+'
		null = ":"

		# Column 10+: DATA
		state ntA = '(?=\t?)' begin
		  drop = '(?=$)' exit
		  
		  # No data split/data
		  null = "./."
		  null = ":"
		  null = ","

		  # Genotype Field (GT)
		  # handles upto 5-ploidy
		  # " 0/0 ... 0|1|5"
		  state GT = '(?<=\s)(?=[0-9](\/|\|))' begin
		    drop = '(?=$)' exit
		    drop = '(?=:)' exit
		    drop = '(?=\t)' exit

		    ntN = '0'
		    ntC = '1'
		    ntA = '2'
		    ntG = '3'
		    ntT = '4'
		    faheader = '[5-9]'

		    string = "/" # unphased
		    keyword = "|" # phased
		  end

		  # Remaining Fields
		  numeric = '[0-9]+'

		end #col10+
	      end #col9
	    end #col8
	  end #col7
	end #col6
      end #col45
    end #col3
  end #col2
end #data / col1


