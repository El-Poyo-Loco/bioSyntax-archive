<?xml version="1.0" encoding="UTF-8"?>
<!--
ebethan - 2017 10 21
Color Scheme for DNA/RNA Sequences
Associates with fasta files (.fa; .fasta)
Using 'Kate color theme'
A   - Dark Green
T\U - Red
G   - Brown
C   - Blue
-->
<language id="fastza" _name="Fastza" version="2.0" _section="Scientific">

  <metadata>
    <property name="mimetypes">text/fastza</property>
    <property name="globs">*.faa</property>
  </metadata>

  <styles>
    <style id="header" _name="Header_"  map-to="def:statement" />
    <style id="A"      _name="A_"       map-to="fa:T" />
    <style id="B"      _name="B_"       map-to="fa:T" />
    <style id="C"      _name="C_"       map-to="fa:T" />
    <style id="D"      _name="D_"       map-to="fa:T" />
    <style id="E"      _name="E_"       map-to="fa:T" />
    <style id="F"      _name="F_"       map-to="fa:T" />
    <style id="G"      _name="G_"       map-to="fa:T" />
    <style id="H"      _name="H_"       map-to="fa:T" />
    <style id="I"      _name="I_"       map-to="fa:T" />
    <style id="K"      _name="K_"       map-to="fa:T" />
    <style id="L"      _name="L_"       map-to="fa:T" />
    <style id="M"      _name="M_"       map-to="fa:T" />
    <style id="N"      _name="N_"       map-to="fa:T" />
    <style id="P"      _name="P_"       map-to="fa:T" />
    <style id="Q"      _name="Q_"       map-to="fa:T" />
    <style id="R"      _name="R_"       map-to="fa:T" />
    <style id="S"      _name="S_"       map-to="fa:T" />
    <style id="T"      _name="T_"       map-to="fa:T" />
    <style id="V"      _name="V_"       map-to="fa:T" />
    <style id="W"      _name="W_"       map-to="fa:T" />
    <style id="Y"      _name="Y_"       map-to="fa:T" />
    <style id="Z"      _name="Z_"       map-to="fa:T" />
    <style id="X"      _name="X_"       map-to="fa:T" />
    <style id="Stop"      _name="stop_"       map-to="fa:T" />
    <style id="Indel"      _name="indel_"       map-to="fa:T" />
  </styles>

  <definitions>
    <context id="fastza">
      <include>

       <context id="Header" style-ref="header">
         <start>^\></start>
         <end>$</end>
       </context>
       
       <context id="a" style-ref="A">
         <match>[Aa]*</match>
       </context>
       
       <context id="b" style-ref="B">
         <match>[Bb]*</match>
       </context>
       
       <context id="c" style-ref="C">
         <match>[Cc]*</match>
       </context>
       
       <context id="d" style-ref="D">
         <match>[Dd]*</match>
       </context>
       
       <context id="e" style-ref="E">
         <match>[Ee]*</match>
       </context>
       
       <context id="f" style-ref="F">
         <match>[Ff]*</match>
       </context>
       
       <context id="g" style-ref="G">
         <match>[Gg]*</match>
       </context>
       
       <context id="h" style-ref="H">
         <match>[Hh]*</match>
       </context>
       
       <context id="i" style-ref="I">
         <match>[Ii]*</match>
       </context>
       
       <context id="k" style-ref="K">
         <match>[Kk]*</match>
       </context>
       
       <context id="l" style-ref="L">
         <match>[Ll]*</match>
       </context>
       
       <context id="m" style-ref="M">
         <match>[Mm]*</match>
       </context>
       
       <context id="n" style-ref="N">
         <match>[Nn]*</match>
       </context>
       
       <context id="p" style-ref="P">
         <match>[Pp]*</match>
       </context>
       
       <context id="q" style-ref="Q">
         <match>[Qq]*</match>
       </context>
       
       <context id="r" style-ref="R">
         <match>[Rr]*</match>
       </context>
       
       <context id="s" style-ref="S">
         <match>[Ss]*</match>
       </context>
       
       <context id="t" style-ref="T">
         <match>[Tt]*</match>
       </context>
       
       <context id="v" style-ref="V">
         <match>[Vv]*</match>
       </context>
       
       <context id="w" style-ref="W">
         <match>[Ww]*</match>
       </context>
       
       <context id="y" style-ref="Y">
         <match>[Yy]*</match>
       </context>
       
       <context id="z" style-ref="Z">
         <match>[Zz]*</match>
       </context>
       
       <context id="x" style-ref="X">
         <match>[Xx]*</match>
       </context>
       
       <context id="stop" style-ref="Stop">
         <match>\*</match>
       </context>
       
       <context id="indel" style-ref="Indel">
         <match>\-</match>
       </context>
       
      </include>
    </context>
  </definitions>
</language>
