<?xml version="1.0" encoding="UTF-8"?>
<!--
ababaian - 2017 01 27

Syntax highlighting for Bed Files
Compatible with BED3,4,5,6,12 (.bed)

Built for use with 'bioKate color theme'

-->
<language id="bed" _name="Bed" version="2.0" _section="Scientific">
  <metadata>
    <property name="mimetypes">text/bed</property>
    <property name="globs">*.bed</property>
  </metadata>

  <styles>

    <style id="chrom"        _name="Chrom"    map-to="def:statement" />
    <style id="start"        _name="Start"    map-to="bio:coords" />
    <style id="end"          _name="End"      map-to="bio:coords" />
    <style id="name" _name="Chrom"  map-to="def:string" />
    <style id="score" _name="Chrom"  map-to="def:statement" />
    <style id="strand" _name="Chrom"  map-to="def:statement" />
    <style id="thickStart" _name="Chrom"  map-to="def:statement" />
    <style id="thickEnd" _name="Chrom"  map-to="def:statement" />
    <style id="itemRgb" _name="Chrom"  map-to="def:statement" />
    <style id="blockCount" _name="Chrom"  map-to="def:statement" />
    <style id="blockSizes" _name="Chrom"  map-to="def:statement" />
    <style id="blockStarts" _name="Chrom"  map-to="def:statement" />

  </styles>

  <definitions>
    <context id="bed">
      <include>

	<context id="coordinates" style-ref="chrom">
	  <match extended="true">
          (^([^\t]*\t){3})
	  </match>
        </context>

	<context id="1_chr" style-ref="start">
          <start>^[A-Za-z0-9\._\-]*</start>
	  <end>\t</end>
        </context>

      </include>
    </context>
  </definitions>
</language>
